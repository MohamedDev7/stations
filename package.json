		"@mui/material": "^5.15.3",
		"@mui/x-data-grid": "^6.18.7",
		"@react-pdf/renderer": "^3.4.4",
		"axios": "^1.7.7",
		"electron-context-menu": "^3.6.1",
		"electron-is-dev": "^2.0.0",
		"electron-updater": "^6.1.7",
